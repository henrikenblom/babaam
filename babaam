#!/usr/bin/env bash

# BA-BAAM! Launcher Script
# This script checks dependencies and runs the game

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check Python version
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}ERROR: Python 3 is not installed.${NC}"
    echo "Please install Python 3.6 or higher."
    exit 1
fi

PYTHON_MAJOR=$(python3 -c 'import sys; print(sys.version_info[0])')
PYTHON_MINOR=$(python3 -c 'import sys; print(sys.version_info[1])')

if [ "$PYTHON_MAJOR" -lt 3 ] || { [ "$PYTHON_MAJOR" -eq 3 ] && [ "$PYTHON_MINOR" -lt 6 ]; }; then
    echo -e "${RED}ERROR: Python 3.6 or higher is required.${NC}"
    exit 1
fi

# Check for required Python packages
echo -e "${YELLOW}Checking dependencies...${NC}"
MISSING_DEPS=()

export PYGAME_HIDE_SUPPORT_PROMPT=1
export SDL_AUDIODRIVER=coreaudio
export SDL_AUDIO_DEVICE_ADD_CAPTURE=0

python3 -c "import pynput" 2>/dev/null || MISSING_DEPS+=("pynput")
python3 -c "import pygame" 2>/dev/null || MISSING_DEPS+=("pygame")
python3 -c "import numpy" 2>/dev/null || MISSING_DEPS+=("numpy")

if [ ${#MISSING_DEPS[@]} -gt 0 ]; then
    echo -e "${YELLOW}Missing dependencies: ${MISSING_DEPS[*]}${NC}"
    echo -e "${YELLOW}Installing dependencies...${NC}"

    pip3 install --user "${MISSING_DEPS[@]}" || {
        echo -e "${RED}ERROR: Failed to install dependencies.${NC}"
        echo "Please install manually with:"
        echo "  pip3 install --user pynput pygame numpy"
        echo ""
        echo "Or run the installer:"
        echo "  ./install.sh"
        exit 1
    }

    echo -e "${GREEN}Dependencies installed successfully!${NC}"
fi

# Run the game
cd "$SCRIPT_DIR"
exec python3 "$SCRIPT_DIR/babaam.py"
